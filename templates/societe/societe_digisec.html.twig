{% extends 'base.html.twig' %}

{% block title %}Digisec{% endblock %}

{% block body %}
	<div class="columns">
		<div class="column is-4 mt-6">
			<div class="card m-6">
				<div class="card-image">
					<figure class="image is-6by3">

						<img src="https://bulma.io/images/placeholders/1280x960.png" alt="Placeholder image">

					</figure>
				</div>
			</div>
		</div>
		<div class="column is-7 ml-2">
			<h1 class="has-text-centered title is-2 mt-5 ">DIGISEC</h1>

			<fieldset class="box">
				<legend class="label">DIGISEC</legend>

				<div class="columns is-mobile">
					<div class="has-text-link column is-4">
						Nom :
					</div>
					<div class="column is-8">
						{{societe.nom}}
					</div>
				</div>

				<div class="columns is-mobile">
					<div class="has-text-link column is-4">
						Raison sociale :
					</div>
					<div class="column is-8">
						{{societe.raisonSocial}}
					</div>
				</div>

				<div class="columns is-mobile">
					<div class="has-text-link column is-4">
						Type d'entreprise :
					</div>
					<div class="column is-8">
						{{societe.typeEntreprise}}
					</div>
				</div>

				<div class="columns is-mobile">
					<div class="has-text-link column is-4">
						Capital social :
					</div>
					<div class="column is-8">
						{{societe.capitalSocial}} €
					</div>
				</div>

				<div class="columns is-mobile">
					<div class="has-text-link column is-4">
						Immatriculation RCS :
					</div>
					<div class="column is-8">
						{{societe.immatRcs}}
					</div>
				</div>
				
			</fieldset>

			<fieldset class="box">
				<legend class="label">Adresse</legend>

				<div class="columns is-mobile">
					<div class="has-text-link column is-4">
						Rue :
					</div>
					<div class="column is-8">
						rue de digisec
					</div>
				</div>

				<div class="columns is-mobile">
					<div class="has-text-link column is-3">
						Code postal :
					</div>
					<div class="column is-3">
						code postal 
					</div>
					<div class="has-text-link column is-3">
						Ville :
					</div>
					<div class="column is-3">
						ville de digisec
					</div>
				</div>

			</fieldset>

			<fieldset class="box">
				<legend class="label">Contact</legend>

				<div class="columns is-mobile">
					<div class="has-text-link column is-3">
						Nom :
					</div>
					<div class="column is-3">
						REPILLEZ
					</div>
					<div class="has-text-link column is-3">
						Prénom :
					</div>
					<div class="column is-3">
						Gaël
					</div>
				</div>

				<div class="columns is-mobile">
					<div class="has-text-link column is-3">
						Téléphone :
					</div>
					<div class="column is-3">
						0606060606
					</div>
					<div class="has-text-link column is-3">
						Adresse mail :
					</div>
					<div class="column is-3">
						gael@digisec.fr
					</div>
				</div>

			</fieldset>

			<div class="section columns">
				<div class="column"></div>
				<a id="lienModifier" <button title="Sélectionnez une société pour la modifier" class="button is-medium is-link is-light is-3" id="btnModifier">Modifier</a>
				<div class="column"></div>
				<div class="column"></div>
			</div>
		</div>
	</div>
{% endblock %}
