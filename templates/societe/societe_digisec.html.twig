{% extends 'base.html.twig' %}

{% block title %}Digisec
{% endblock %}

{% block body %}
	<div class="columns">
		<div class="column is-4 mt-6">
			<div class="card m-6">
				<div class="card-image">
					<figure class="image is-6by3">
						{% if logo is not defined or logo == "" %}
							<img src="https://bulma.io/images/placeholders/1280x960.png" alt="Placeholder image">
						{% else %}
							<img src="{{ asset('img/logos/' ~ societe.logo ) }}" alt="Placeholder image">
						{% endif %}
					</figure>
				</div>
			</div>
		</div>
		<div class="titre-general column is-7 ml-2">
			<fieldset class="box">
				<legend class="label">DIGISEC</legend>

				<div class="columns is-tablet">
					<div class="has-text-link column is-4">
						Nom :
					</div>
					<div class="column is-8">
						{{societe.nom}}
					</div>
				</div>

				<div class="columns is-tablet">
					<div class="has-text-link column is-4">
						Raison sociale :
					</div>
					<div class="column is-8">
						{{societe.raisonSocial}}
					</div>
				</div>

				<div class="columns is-tablet">
					<div class="has-text-link column is-4">
						Type d'entreprise :
					</div>
					<div class="column is-8">
						{{societe.typeEntreprise}}
					</div>
				</div>

				<div class="columns is-tablet">
					<div class="has-text-link column is-4">
						Capital social :
					</div>
					<div class="column is-8">
						{{societe.capitalSocial}}
						€
					</div>
				</div>

				<div class="columns is-tablet">
					<div class="has-text-link column is-4">
						Immatriculation RCS :
					</div>
					<div class="column is-8">
						{{societe.immatRcs}}
					</div>
				</div>

			</fieldset>

			<fieldset class="box">
				<legend class="label">Adresse</legend>

				<div class="columns is-tablet">
					<div class="has-text-link column is-3">
						Rue :
					</div>
					<div class="column is-6">
						{{societe.adresse.first.rue}}
					</div>
				</div>

				<div class="columns is-tablet">
					<div class="has-text-link column is-3">
						Code postal :
					</div>
					<div class="column is-3">
						{{ societe.adresse.first.codePostal}}
					</div>
					<div class="has-text-link column is-3">
						Ville :
					</div>
					<div class="column is-3">
						{{ societe.adresse.first.ville}}
					</div>
				</div>

			</fieldset>

			<fieldset class="box">
				<legend class="label">Contact</legend>

				<div class="columns is-tablet">
					<div class="has-text-link column is-3">
						Nom :
					</div>
					<div class="column is-3">
						{{ societe.contact.first.nomContact}}
					</div>
					<div class="has-text-link column is-3">
						Prénom :
					</div>
					<div class="column is-3">
						{{ societe.contact.first.prenomContact }}
					</div>
				</div>

				<div class="columns is-tablet">
					<div class="has-text-link column is-3">
						Téléphone :
					</div>
					<div class="column is-3">
						{{ societe.contact.first.telContact}}
					</div>
					<div class="has-text-link column is-3">
						Adresse mail :
					</div>
					<div class="column is-3">
						{{ societe.contact.first.emailContact}}
					</div>
				</div>

			</fieldset>

			<div class="section columns">
				<div class="column"></div>

				<div class="column">
					<a href="{{path('societe_modifier', {id: societe.id})}}">
						<button class="button is-info is-fullwidth">Modifier</button>
					</a>
				</div>

				<div class="column"></div>
			</div>
		</div>
	</div>
{% endblock %}
