{% extends 'base.html.twig' %}

{% block title %}
	{{ parent() }}
	| Ajouter une entreprise
{% endblock %}

{% block body %}

	<div class="columns">
		<div class="column is-4 mt-6">
			<div class="card m-6">
				<div class="card-image">
					<figure class="image is-6by3">
						<img src="https://bulma.io/images/placeholders/1280x960.png" alt="Placeholder image">
					</figure>
				</div>
			</div>
		</div>
		<div class="column is-7 ml-2">
			<h1 class="has-text-centered title is-2 mt-5 ">Ajouter une entreprise</h1>
			{{ form_start(societeForm) }}
			<fieldset class="box">
				<legend class="label">Entreprise</legend>
				<div class="columns is-mobile">
					<div class="column is-4">
						{{ form_label(societeForm.nom, null, {'attr': {'class': 'has-text-link'} }) }}
					</div>
					<div class="column is-8">
						{{ form_widget(societeForm.nom, {'attr': {'class': 'input is-link', 'placeholder': 'Nom'}}) }}
					</div>
				</div>

				<div class="columns is-mobile">
					<div class="column is-4">
						{{ form_label(societeForm.raison_social, null, {'attr': {'class': 'has-text-link'} }) }}
					</div>
					<div class="column is-8">
						{{ form_widget(societeForm.raison_social, {'attr': {'class': 'input is-link', 'placeholder': 'Raison sociale'}}) }}
					</div>
				</div>

				<div class="columns is-mobile">
					<div class="column is-4">
						{{ form_label(societeForm.type_entreprise, null, {'attr': {'class': 'has-text-link'} }) }}
					</div>
					<div class="column is-8">
						{{ form_widget(societeForm.type_entreprise, {'attr': {'class': 'input is-link', 'placeholder': 'Raison sociale'}}) }}
					</div>
				</div>

				<div class="columns is-mobile">
					<div class="column is-4">
						{{ form_label(societeForm.capital_social, null, {'attr': {'class': 'has-text-link'} }) }}
					</div>
					<div class="column is-8">
						{{ form_widget(societeForm.capital_social, {'attr': {'class': 'input is-link', 'placeholder': 'Capital social'}}) }}
					</div>
				</div>

				<div class="columns is-mobile">
					<div class="column is-4">
						{{ form_label(societeForm.immat_rcs, null, {'attr': {'class': 'has-text-link'} }) }}
					</div>
					<div class="column is-8">
						{{ form_widget(societeForm.immat_rcs, {'attr': {'class': 'input is-link', 'placeholder': 'Immatriculation RCS'}}) }}
					</div>
				</div>

				<div class="columns is-mobile">
					<div class="column is-4">
						{{ form_label(societeForm.logo, null, {'attr': {'class': 'has-text-link'} }) }}
					</div>
					<div class="column is-8">
						{{ form_widget(societeForm.logo, {'attr': {'class': 'input is-link', 'placeholder': 'Immatriculation RCS'}}) }}
					</div>
				</div>
			</fieldset>

			<fieldset class="box">
				<legend class="label">Adresse</legend>
				<div class="columns is-mobile">
					<div class="column is-4">
						{{ form_label(societeForm.rue, null, {'attr': {'class': 'has-text-link'} }) }}
					</div>
					<div class="column is-8">
						{{ form_widget(societeForm.rue, {'attr': {'class': 'input is-link', 'placeholder': 'Rue'}}) }}
					</div>
				</div>

				<div class="columns is-mobile">
					<div class="column is-4">
						{{ form_label(societeForm.code_postal, null, {'attr': {'class': 'has-text-link'} }) }}
					</div>
					<div class="column is-8">
						{{ form_widget(societeForm.code_postal, {'attr': {'class': 'input is-link', 'placeholder': 'Code postal'}}) }}
					</div>
				</div>

				<div class="columns is-mobile">
					<div class="column is-4">
						{{ form_label(societeForm.ville, null, {'attr': {'class': 'has-text-link'} }) }}
					</div>
					<div class="column is-8">
						{{ form_widget(societeForm.ville, {'attr': {'class': 'input is-link', 'placeholder': 'Ville'}}) }}
					</div>
				</div>
			</fieldset>

			<fieldset class="box">
				<legend class="label">Contact</legend>
				<div class="columns is-mobile">
					<div class="column is-4">
						{{ form_label(societeForm.nom_contact, null, {'attr': {'class': 'has-text-link'} }) }}
					</div>
					<div class="column is-8">
						{{ form_widget(societeForm.nom_contact, {'attr': {'class': 'input is-link', 'placeholder': 'Nom'}}) }}
					</div>
				</div>

				<div class="columns is-mobile">
					<div class="column is-4">
						{{ form_label(societeForm.tel_contact, null, {'attr': {'class': 'has-text-link'} }) }}
					</div>
					<div class="column is-8">
						{{ form_widget(societeForm.tel_contact, {'attr': {'class': 'input is-link', 'placeholder': 'Téléphone'}}) }}
					</div>
				</div>

				<div class="columns is-mobile">
					<div class="column is-4">
						{{ form_label(societeForm.mail_contact, null, {'attr': {'class': 'has-text-link'} }) }}
					</div>
					<div class="column is-8">
						{{ form_widget(societeForm.mail_contact, {'attr': {'class': 'input is-link', 'placeholder': 'Mail'}}) }}
					</div>
				</div>
			</fieldset>


			<div class="section columns">
				<div class="column"></div>
				<button type="submit" class="button is-medium is-link is-light is-3">Enregistrer</button>
				<div class="column"></div>
				<a class="button is-medium is-link is-light is-3" href="#">Annuler</a>
				<div class="column"></div>
			</div>
		</div>
		{{ form_end(societeForm) }}
	</div>
{% endblock %}
