{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}
    
    <h1 class="has-text-centered title is-2 mt-5 ">Inscription</h1>
    {{ form_start(registrationForm) }}
    <fieldset class="box">
    <legend class="label">Ajouter un utilisateur</legend>
        <div class="columns">
        <div class="column is-6 ml-3">
            <div class="columns is-center">
					<div class="column is-4">
						{{ form_label(registrationForm.username) }}
					</div>
					<div class="column is-8">
						{{ form_widget(registrationForm.username, {'attr': {'class': 'input is-link', 'placeholder': 'Nom d\'utilisateur'} }) }}
					</div>
				</div>

            <div class="columns is-mobile">
					<div class="column is-4">
						{{ form_label(registrationForm.prenom) }}
					</div>
					<div class="column is-8">
						{{ form_widget(registrationForm.prenom, {'attr': {'class': 'input is-link', 'placeholder': 'Pr√©nom'} }) }}
					</div>
				</div>

            <div class="columns is-mobile">
					<div class="column is-4">
						{{ form_label(registrationForm.nom) }}
					</div>
					<div class="column is-8">
						{{ form_widget(registrationForm.nom, {'attr': {'class': 'input is-link', 'placeholder': 'Nom'} }) }}
					</div>
				</div>
                
                <div class="columns is-mobile">
					<div class="column is-4">
						{{ form_label(registrationForm.email) }}
					</div>
					<div class="column is-8">
						{{ form_widget(registrationForm.email, {'attr': {'class': 'input is-link', 'placeholder': 'Email'} }) }}
					</div>
				</div>

                <div class="columns is-mobile">
					<div class="column is-4">
						{{ form_label(registrationForm.plainPassword) }}
					</div>
					<div class="column is-8">
						{{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'input is-link', 'placeholder': 'Mot de passe'} }) }}
					</div>
				</div>
        </fieldset>

                <div class="section columns">
				<div class="column"></div>
                <button type="submit" class="button is-medium is-link is-light is-3">Inscrire</button>
				<div class="column"></div>
				<a class="button is-medium is-link is-light is-3" href="#">Annuler</a>
				<div class="column"></div>
			</div>
        </div>
       {{ form_end(registrationForm) }} 
       </div>
{% endblock %}

